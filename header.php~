         stroke: "#222",
         "stroke-width": 0.3,
         "stroke-linejoin": "round"
     };
     path10 = R.path("m 221.63509,150.81487 97.24682,0 0,89.68452 -97.24682,0 0,-89.68452 z").attr(attr);
     path10.node.setAttribute("id","barry");

     $("li").click(function(){
         console.log("clikck");
         $("#canvas").fadeOut();
     });     

});

